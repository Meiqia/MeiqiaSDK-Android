<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_ll"
    style="@style/MQMatchMatch.Horizontal"
    android:padding="8dp">

    <com.meiqia.meiqiasdk.widget.MQImageView
        android:id="@+id/iv_robot_avatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/mq_ic_holder_avatar"
        app:mq_iv_isCircle="true"
        tools:background="#f00" />

    <LinearLayout
        android:id="@+id/ll_root_robot_container"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:id="@+id/ll_robot_container"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@drawable/mq_bg_msg_left"
            android:orientation="vertical">

        </LinearLayout>

        <com.meiqia.meiqiasdk.widget.MQWarpLinearLayout
            android:id="@+id/ll_operation"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>