<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/mq_pic_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        tools:src="@drawable/mq_ic_evaluate_normal" />

    <TextView
        android:id="@+id/mq_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="@color/mq_activity_title_textColor"
        android:lines="1"
        tools:text="我是标题" />

    <TextView
        android:id="@+id/mq_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:alpha="0.6"
        android:textSize="11sp"
        android:textColor="@color/mq_activity_title_textColor"
        tools:text="我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/count_tv"
            android:layout_weight="1"
            tools:text="销量：111"
            android:alpha="0.6"
            android:textSize="11sp"
            android:textColor="@color/mq_activity_title_textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mq_detail_tv"
            android:text="@string/mq_view_details"
            android:alpha="0.6"
            android:textSize="11sp"
            android:textColor="@color/mq_colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>