<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MQMatchMatch"
    android:background="@color/mq_activity_bg"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mq_title_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/mq_bg_title">

        <RelativeLayout
            android:id="@+id/back_rl"
            style="@style/MQWrapMatch"
            android:paddingLeft="@dimen/mq_size_level3"
            android:paddingRight="@dimen/mq_size_level3">

            <ImageView
                android:id="@+id/back_iv"
                style="@style/MQWrapMatch"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mq_size_level1"
                android:src="@drawable/mq_ic_back" />

            <TextView
                android:id="@+id/back_tv"
                style="@style/MQWrapWrap"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/back_iv"
                android:text="@string/mq_back"
                android:textColor="@color/mq_activity_title_textColor"
                android:textSize="@dimen/mq_title_left_right_textSize"
                tools:text="返回" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title_tv"
            style="@style/MQWrapMatch"
            android:layout_centerHorizontal="true"
            android:drawablePadding="@dimen/mq_size_level1"
            android:gravity="center"
            android:maxWidth="220dp"
            android:singleLine="true"
            android:textColor="@color/mq_activity_title_textColor"
            android:textSize="@dimen/mq_titlebar_textSize"
            tools:text="AgentNameAgentNameAgentNameAgentNameAgentNameAgentName" />

        <LinearLayout
            android:id="@+id/right_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/redirect_human_tv"
                style="@style/MQWrapMatch"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/mq_size_level3"
                android:paddingRight="@dimen/mq_size_level3"
                android:text="@string/mq_redirect_human"
                android:textColor="@color/mq_activity_title_textColor"
                android:textSize="@dimen/mq_title_left_right_textSize"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/right_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="@dimen/mq_size_level1"
                android:layout_marginRight="@dimen/mq_size_level2"
                android:src="@drawable/mq_ic_back"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mq_size_level2"
                android:text="@string/mq_redirect_human"
                android:textColor="@color/mq_activity_title_textColor"
                android:textSize="@dimen/mq_title_left_right_textSize"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_body_rl"
        style="@style/MQMatchMatch"
        android:layout_above="@+id/chat_foot_ll"
        android:layout_below="@id/title_rl"
        android:background="@color/mq_activity_bg">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            style="@style/MQMatchMatch">

            <ListView
                android:id="@+id/messages_lv"
                style="@style/MQMatchMatch"
                android:layout_below="@+id/title_tip_tv"
                android:background="@color/mq_activity_bg"
                android:cacheColorHint="#00000000"
                android:divider="#00000000"
                android:listSelector="@android:color/transparent"
                android:transcriptMode="normal" />

        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/chat_foot_ll"
        style="@style/MQMatchWrap.Vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/mq_conversation_edit_bg"
        android:minHeight="92dp">

        <EditText
            android:id="@+id/input_et"
            style="@style/MQMatchWrap"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/mq_size_level4"
            android:layout_marginTop="@dimen/mq_size_level2"
            android:layout_marginRight="@dimen/mq_size_level4"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/mq_send_msg"
            android:maxLines="5"
            android:minHeight="40dp"
            android:textColor="@color/mq_chat_et_textColor"
            android:textCursorDrawable="@drawable/mq_shape_cursor"
            android:textSize="@dimen/mq_textSize_level2"
            tools:text="测试文本" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageButton
                android:id="@+id/send_text_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/mq_shape_send_back_normal"
                android:src="@drawable/mq_ic_send_icon_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/send_text_btn">


                <RelativeLayout
                    android:id="@+id/emoji_select_btn"
                    android:layout_width="48dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/emoji_select_img"
                        android:layout_width="@dimen/mq_size_level6"
                        android:layout_height="@dimen/mq_size_level6"
                        android:layout_centerInParent="true"
                        android:src="@drawable/mq_ic_emoji_normal" />

                    <View
                        android:id="@+id/emoji_select_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/mq_indicator_selected"
                        android:visibility="gone" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/photo_select_btn"
                    android:layout_width="48dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/photo_select_iv"
                        android:layout_width="@dimen/mq_size_level6"
                        android:layout_height="@dimen/mq_size_level6"
                        android:layout_centerInParent="true"
                        android:src="@drawable/mq_selector_ic_image" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/camera_select_btn"
                    android:layout_width="48dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/camera_select_iv"
                        android:layout_width="@dimen/mq_size_level6"
                        android:layout_height="@dimen/mq_size_level6"
                        android:layout_centerInParent="true"
                        android:src="@drawable/mq_selector_ic_camera" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/video_select_btn"
                    android:layout_width="48dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/video_select_iv"
                        android:layout_width="@dimen/mq_size_level6"
                        android:layout_height="@dimen/mq_size_level6"
                        android:layout_centerInParent="true"
                        android:src="@drawable/mq_selector_ic_video" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mic_select_btn"
                    android:layout_width="48dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/conversation_voice_img"
                        android:layout_width="@dimen/mq_size_level6"
                        android:layout_height="@dimen/mq_size_level6"
                        android:layout_centerInParent="true"
                        android:src="@drawable/mq_ic_mic_normal" />

                    <View
                        android:id="@+id/conversation_voice_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/mq_indicator_selected"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/evaluate_select_btn"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:id="@+id/evaluate_select_iv"
                        android:layout_width="@dimen/mq_size_level6"
                        android:layout_height="@dimen/mq_size_level6"
                        android:layout_centerInParent="true"
                        android:src="@drawable/mq_selector_ic_evaluate" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <com.meiqia.meiqiasdk.widget.MQCustomKeyboardLayout
            android:id="@+id/customKeyboardLayout"
            style="@style/MQMatchWrap" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/mq_rotate_progress_bar" />

</RelativeLayout>
