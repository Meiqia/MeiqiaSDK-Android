<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mq_robot_faq_detail_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mq_bg_card"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/mq_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/mq_faq"
        android:textSize="@dimen/mq_size_level4"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:id="@+id/mq_robot_faq_detail_tab_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/mq_robot_faq_detail_tab_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <View
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:background="@color/mq_line"
        android:layout_height="1dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/mq_robot_faq_detail_content_vp"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        tools:background="@color/mq_card_border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mq_pre_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="180"
                android:src="@drawable/mq_arrow_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/mq_pre_page"
                android:textColor="@color/mq_chat_event_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/mq_next_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical |right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/mq_next_page"
                android:textColor="@color/mq_chat_event_gray"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mq_arrow_right" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>